<table class="table-sm text-white">
  <thead>
    <tr>
      <th>Имя группы</th>
      <th>Позиция</th>
      <th>Колонка слева</th>
      <th colspan="2"></th>
    </tr>
  </thead>

  <tbody>
    <% groups.each do |group| %>
      <tr>
        <td><%= group.name %></td>
        <td><%= group.position %></td>
        <td><%= group.align_left %></td>
        <td><%= link_to t('.edit'), edit_group_path(group), class: "btn btn-light" %></td>
        <td><%= link_to t('.destroy'), group, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-light" %></td>
      </tr>
    <% end %>
  </tbody>
</table>
