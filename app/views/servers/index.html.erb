<div class="row mt-3">
  <div class="col col-md-6 ">
    <h4 class="text-primary"><%= t('.servers') %></h4>

    <table class="table table-sm">
      <thead>
        <tr>
          <th>Host name</th>
          <th>Ip</th>
          <th colspan="2"></th>
        </tr>
      </thead>

      <tbody>
        <% @servers.each do |server| %>
          <tr>
            <td><%= server.host_name %></td>
            <td><%= server.ip %></td>
            <td><%= link_to t('.edit'), edit_server_path(server) %></td>
            <td><%= link_to t('.destroy'), server, method: :delete, data: { confirm: 'Are you sure?' } %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>
<br>
<%= link_to t('.new_server'), new_server_path %>
