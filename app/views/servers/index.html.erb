<div class="col col-md-5">
  <h2 id="center" class="card-header"><%= t('.servers') %></h2>
  <div class="card text-white mb-3 nbc">
    <div class="card-body">
      <table class="table-sm text-white">
        <thead>
          <tr>
            <th>Host name</th>
            <th>Ip</th>
            <th colspan="2"></th>
          </tr>
        </thead>

        <tbody>
          <% @servers.each do |server| %>
            <tr>
              <td><%= server.host_name %></td>
              <td><%= server.ip %></td>
              <td><%= link_to t('.edit'), edit_server_path(server), class: "btn btn-light" %></td>
              <td><%= link_to t('.destroy'), server, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-light" %></td>
            </tr>
          <% end %>
        </tbody>
      </table>

      <%= link_to t('.new_server'), new_server_path, class: "btn btn-light"%>
      <%= link_to t('.back'), :back, class: "btn btn-light" %>
    </div>
  </div>
</div>
