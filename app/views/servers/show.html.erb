<div class="row justify-content-center mt-3" style="padding-top:50px">
  <div class="col col-md-5">
    <h2 align=center class="card-header"><%= @server.host_name %></h2>
    <div class="card text-white mb-3" style="background-color: #8B008B;">
      <div class="card-body">
        <p class="card-text">
          <strong>Path:</strong>
          <%= @server.host_name %>
        </p>

        <p class="card-text">
          <strong>Group:</strong>
          <%= @server.ip %>
        </p>
        <%= link_to 'Edit', edit_server_path(@server), class: "btn btn-light" %>

        <%= link_to t('.back'), servers_path, class: "btn btn-light" %>
      </div>
    </div>
  </div>
</div>
