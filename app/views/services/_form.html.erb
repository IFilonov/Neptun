<%= form_with(model: service, local: true) do |form| %>
  <table class="table">
    <td>
      <%= form.label :name, class: "text-white" %>
      <%= form.label :path, class: "text-white" %>
      <%= form.label :group, class: "text-white" %>
      <%= form.label :start, class: "text-white" %>
      <%= form.label :stop, class: "text-white" %>
      <%= form.label :restart, class: "text-white" %>
      <%= form.label :server_id, class: "text-white" %>
      <%= form.label :status, class: "text-white" %>
    </td>
    <td>
      <%= form.text_field :name %>
      <%= form.text_field :path %>
      <%= form.collection_select :group_id, Group.all, :id, :name, prompt: true %>
      <%= form.text_field :start %>
      <%= form.text_field :stop %>
      <%= form.text_field :restart %>
      <%= form.collection_select :server_id, Server.all, :id, :host_name, prompt: true %>
      <%= form.number_field :status %>
    </td>
  </table>
  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>
