<%= form_with(model: service, local: true) do |form| %>
  <table class="table-sm w-100">
    <tr>
      <td class="w-0"><%= form.label :name, class: "text-white" %></td>
      <td class="w-100"><%= form.text_field :name, class: "w-100"  %></td>
    </tr>
    <tr>
      <td><%= form.label :path, class: "text-white" %></td>
      <td><%= form.text_field :path, class: "w-100" %></td>
    </tr>
    <tr>
      <td><%= form.label :Sudoname, class: "text-white" %></td>
      <td><%= form.text_field :sudo_name, class: "w-100" %></td>
    </tr>
    <tr>
      <td><%= form.label :group, class: "text-white" %></td>
      <td><%= form.collection_select :group_id, Group.all, :id, :name, prompt: true %></td>
    </tr>
    <tr>
      <td><%= form.label :start, class: "text-white" %></td>
      <td><%= form.text_field :start, class: "w-100" %></td>
    </tr>
    <tr>
      <td><%= form.label :stop, class: "text-white" %></td>
      <td><%= form.text_field :stop, class: "w-100" %></td>
    </tr>
    <tr>
      <td><%= form.label :restart, class: "text-white" %></td>
      <td><%= form.text_field :restart, class: "w-100" %></td>
    </tr>
    <tr>
      <td><%= form.label :state, class: "text-white" %></td>
      <td><%= form.text_field :state, class: "w-100" %></td>
    </tr>
    <tr>
      <td><%= form.label :server_id, class: "text-white" %></td>
      <td><%= form.collection_select :server_id, Server.all, :id, :host_name, prompt: true %></td>
    </tr>
    <tr>
      <td><%= form.label :user_id, class: "text-white" %></td>
      <td><%= form.collection_select :user_id, User.all, :id, :ldap_login, prompt: true %></td>
    </tr>
    <tr>
      <td><%= form.label :status, class: "text-white" %></td>
      <td><%= form.number_field :status %></td>
    </tr>
  </table>
  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>
